{
  "name": "twoo-projects",
  "version": "0.1.10",
  "description": "Aplicacion para facilitar el trabajo en equipo.",
  "main": "main.js",
  "author": "ElFo2K - Twoo",
  "scripts": {
    "start": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dist": "electron-builder",
    "build-obfuscated": "javascript-obfuscator ./renderer.js --output ./renderer-protected.js --compact true --control-flow-flattening true && electron-builder"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.0.0",
    "@electron-forge/maker-squirrel": "^7.0.0",
    "@electron-forge/maker-zip": "^7.0.0",
    "electron": "latest",
    "electron-builder": "^26.7.0",
    "javascript-obfuscator": "^5.3.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./icon",
        "name": "Twoo Projects",
        "executableName": "TwooProjects",
        "asar": true,
        "fileAssociations": [
          {
            "ext": "twoo",
            "name": "Twoo Project File",
            "role": "Editor",
            "icon": "./icon.ico"
          }
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "TwooProjects",
            "setupIcon": "./icon.ico",
            "setupExe": "TwooProjectsSetup.exe"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32"
          ]
        }
      ]
    }
  },
  "build": {
    "appId": "com.twoostudio.projects",
    "productName": "Twoo Projects",
    "copyright": "Copyright Â© 2026 ElFo2K Twoo",
    "publish": [
      {
        "provider": "github",
        "owner": "2K-Studiox",
        "repo": "TwooNaN"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "artifactName": "TwooProjectsSetup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Twoo Projects",
      "runAfterFinish": true
    },
    "asar": true,
    "files": [
      "**/*",
      "!out/*",
      "!dist/*",
      "!compile.js",
      "!main-logic.js",
      "!.jsc"
    ]
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.3.9",
    "node-machine-id": "^1.1.12"
  }
}